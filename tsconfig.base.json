{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jbhive/admin_be": ["libs/admin/backend/src/index.ts"],
      "@jbhive/admin_fe": ["libs/admin/frontend/src/index.ts"],
      "@jbhive/auth_be": ["libs/security/auth/backend/src/index.ts"],
      "@jbhive/auth_fe": ["libs/security/auth/frontend/src/index.ts"],
      "@jbhive/config_be": ["libs/utils/config/backend/src/index.ts"],
      "@jbhive/crypt": ["libs/security/crypt/src/index.ts"],
      "@jbhive/graphql": ["libs/data/graphql/src/index.ts"],
      "@jbhive/log_be": ["libs/utils/log/backend/src/index.ts"],
      "@jbhive/math": ["libs/utils/math/src/index.ts"],
      "@jbhive/profile": ["libs/profile/frontend/src/index.ts"],
      "@jbhive/snackbar": ["libs/utils/snackbar/src/index.ts"],
      "@jbhive/source_be": ["libs/source/backend/src/index.ts"],
      "@jbhive/source_fe": ["libs/source/frontend/src/index.ts"],
      "@jbhive/styles": ["libs/styles/src/index.ts"],
      "@jbhive/types_be": ["libs/utils/types/backend/src/index.ts"],
      "@jbhive/types_fe": ["libs/utils/types/frontend/src/index.ts"],
      "@jbhive/uptime": ["libs/utils/uptime/frontend/src/index.ts"],
      "@jbhive/user_be": ["libs/user/backend/src/index.ts"],
      "@jbhive_ai/api-interfaces": ["libs/api-interfaces/src/index.ts"]      
    }
  },
  "exclude": ["node_modules", "tmp"]
}
